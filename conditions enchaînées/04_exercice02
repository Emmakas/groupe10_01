role = input("Rôle (employé/visiteur/sécurité): ").lower()
if role == "employé":
    badge = input("Badge valide ? (oui/non): ").lower()
    if badge == "oui":
        print("Acces autorisé")
    else :
        print("Acces refusé, badge invalide .")
elif role == "visiteur":
    rdv = input('Avez-vous un rendez-vous ? (oui/non) :').lower()
    if rdv == "oui":
        print("Acces autorisé.")
    else :
        print("Acces refusé, pas de rendez-vous.")
elif role == "securite" :
    print("Acces autorisé.")
else:
    print("Acces refusé, role inconnu.")
    
